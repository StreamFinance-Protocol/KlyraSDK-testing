{
  "include": [
    "node_modules/@klyra/proto/**/**.ts",
    "src",
    "codegen.js"
  ],
  "exclude": ["src/codegen/**/*.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2019",
    "module": "CommonJS",
    "inlineSourceMap": true,
    "allowJs": true,
    "isolatedModules": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
  }
}
