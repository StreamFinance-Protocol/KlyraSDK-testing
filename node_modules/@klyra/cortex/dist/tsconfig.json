{
    "comment": {
        "comment": "We need to reference it through the node_modules folder because of this error when trying to test the application: https://github.com/TypeStrong/ts-node/issues/2076#issuecomment-1824874350"
    },
    "compilerOptions": {
        "outDir": "./dist",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019"
        ],
        "declaration": true,
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": true,
        "isolatedModules": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noUncheckedIndexedAccess": true,
        "target": "ES2019",
        "module": "CommonJS",
        "moduleResolution": "node"
    }
}
