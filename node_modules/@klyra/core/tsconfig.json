{
  "include": [
    "index.ts",
    "scripts",
    "src",
    "codegen.js",
    "node_modules/@klyra/proto/**/**.ts"
  ],
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2019",
    "module": "CommonJS",
    "inlineSourceMap": true,
    "noImplicitAny": false,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "preserveSymlinks": true
  }
}
